<?xml version="1.0"?>
<config>
    <modules>
        <Lybe_VatChecker>
            <version>0.1.0</version>
        </Lybe_VatChecker>
    </modules>
    <frontend>
        <routers>
            <euvatchecker>
                <use>standard</use>
                <args>
                    <module>Lybe_VatChecker</module>
                    <frontName>euvatchecker</frontName>
                </args>
            </euvatchecker>
            <customer>
                <args>
                    <modules>
                        <New_Mage before="Mage_Customer">Lybe_VatChecker</New_Mage>
                    </modules>
                </args>
            </customer>
        </routers>
        <translate>
            <modules>
                <Lybe_Vatchecker>
                    <files>
                        <default>Lybe_Vatchecker.csv</default>
                    </files>
                </Lybe_Vatchecker>
            </modules>
        </translate>
    </frontend>
    <global>
        <helpers>
            <euvatchecker>
                <class>Lybe_VatChecker_Helper</class>
            </euvatchecker>
        </helpers>
        <models>
            <euvatchecker>
                <class>Lybe_VatChecker_Model</class>
            </euvatchecker>
            <checkout>
                <rewrite>
                    <type_onepage>Lybe_VatChecker_Model_Checkout_Onepage</type_onepage>
                </rewrite>
            </checkout>
        </models>
        <blocks>
            <customer>
                <rewrite>
                    <widget_taxvat>Lybe_VatChecker_Block_Widget_Taxvat</widget_taxvat>
                </rewrite>
            </customer>
        </blocks>
    </global>
</config>